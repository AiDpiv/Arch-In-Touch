<% provide(:stylesheet, 'application_home') %>
<% provide(:javascript, 'application') %>
<% provide(:title, 'Arch In Touch') %>



    <section id="main">

        <div class="mainlogo"><%= image_tag("mainlogo.png", width: '204', height: "184px") %></div>

        <div class="menu">
          <div class="menu-item"><a href='#who-we-are'>WHO WE ARE</a></div>
          <div class="menu-item"><a href='#portfolio'>PORTFOLIO</a></div>
          <div class="menu-item"><a href='#our-team'>OUR TEAM</a></div>
          <div class="menu-item"><a href='#contacts'>GET IN TOUCH</a></div>
        </div>
      <div class="clear">
      </div>
    <div class="slogan"><span>BE IN TOUCH WITH ARCHITECTURE AND DESIGN</span></div>
    </section>
    <section id="who-we-are">
      <div class="section-title">
        <div class="section-title-1"></div>
        <div class="section-title-4"></div>
        <div class="section-title-2"></div>
        <div class="section-title-4"></div>
        <div class="section-title-3">WHO WE ARE</div>
      </div><div class="clear"></div>
      <div class="maintext">
        <% @abouts.each do |about| %>
        <p><%= about.paragraph %></p>
        <% end %>
        </div>
    </section>
    <section id="portfolio">
      <div class="section-title">
        <div class="section-title-1"></div>
        <div class="section-title-4"></div>
        <div class="section-title-2"></div>
        <div class="section-title-4"></div>
        <div class="section-title-3">PORTFOLIO</div>
      </div><div class="clear"></div>
      <div class="projects">

        <% @projects.each do |project| %>
        <div class="project">
          <% if project.pictures.exists? %>
          <%=  link_to image_tag(project.pictures.first.photo, class: "picture"), controller: "projects", action: "show", id: project %>
            <% else %>
            <%=  link_to image_tag("blank", class: "picture"), controller: "projects", action: "show", id: project %>
          <% end %>
          <p class="projects-text"><%= project.name %></p>
          <p class="projects-text"><%= project.location %></p>
        </div>
        <% end %>

          </div>
      </div>
      </div>
    </section>
    <section id="our-team">
      <div class="section-title">
        <div class="section-title-1"></div>
        <div class="section-title-4"></div>
        <div class="section-title-2"></div>
        <div class="section-title-4"></div>
        <div class="section-title-3">OUR TEAM</div>
      </div><div class="clear"></div>
      <div class="team">
        <p class="team-text-1">ARCHINTOUCH has two founders:</p>
        <div class="team-flex">
          <div class="team-flex-div">
            <p class="team-text">TATIANA лю</br><span>architect</span></p>
          </div>
          <div class="team-flex-div">
            <p class="team-text">IVAN K </br><span>architect</span></p>
          </div>
        </div>
      </div>
    </section>
    <section id="contacts">
          <div class="section-title">
            <div class="section-title-1"></div>
            <div class="section-title-4"></div>
            <div class="section-title-2"></div>
            <div class="section-title-4"></div>
            <div class="section-title-3">GET IN TOUCH</div>
          </div>
          <div class="clear"></div>
          <div class="footer-flex">
            <div class="footer-headline">
              <p>WE MAKE BETTER PLACES FOR PEOPLE TO BUILD THEIR LIVES</p>
            </div>
            <div class="footer-address">
                  <%= image_tag("footer_logo", class: 'footer-logo') %>

                  <address class="address flex-row">
                    <div class="address1">
                      <p>Address</br>
                      ZIP</br>
                      City</br>
                      Country</br></p>
                    </div>
                    <div class="address2">
                      <p>Dashavskaya st., office 94</br>03056</br>Kiev</br>Ukraine</p>
                    </div>
                  </address>
            </div>
            <div class="footer-questions">
              <p class="">If you have any questions:</br>
              <a href="mailto:archintouch1@gmail.com"><span>archintouch1@gmail.com</span></p>
            </div>
            <div class="footer-contects">
                <p class="footer-text-4">Follow us</p>
                <a href="https://www.facebook.com/sharer.php?u=http://archintouch.com"><%= image_tag("Facebook.png", class: "follow") %></a>
                <a href="https://www.instagram.com/archintouch/"><%= image_tag("instagram.png", class: 'follow') %></a>
            </div>
            <div class="footer-ty">
              <p class="footer-text-5">THANK YOU</p>
            </div>

          </div>
      </section>
  </body>
</html>
